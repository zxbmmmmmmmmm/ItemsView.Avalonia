<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:Virtualization.Avalonia.Sample.Models"
             xmlns:local="clr-namespace:Virtualization.Avalonia.Sample"
             xmlns:viewModels="clr-namespace:Virtualization.Avalonia.Sample.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="models:Item"
             x:Class="Virtualization.Avalonia.Sample.ItemControl">
    <Design.DataContext>
        <models:Item/>
    </Design.DataContext>
    <Grid Margin="24">
        <TextBlock Margin="-16" Text="{Binding LoadedTimes}"/>
        <StackPanel
            HorizontalAlignment="Left"
            Orientation="Horizontal"
            Spacing="12">
            <TextBox
                Text="{Binding Name}" />
            <NumericUpDown FormatString="0" Value="{Binding Value}" />
        </StackPanel>
        <Button
            HorizontalAlignment="Right"
            Command="{Binding $parent[local:MainWindow].((viewModels:MainViewModel)DataContext).RemoveCommand}"
            CommandParameter="{Binding}"
            Content="Remove" />
    </Grid>
</UserControl>
